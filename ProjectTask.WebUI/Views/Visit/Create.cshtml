@model VisitViewModel

<div class="modal-header">
    <h5 class="modal-title">@ViewData["Title"]</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Save" class="form-group">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input asp-for="Id" class="form-control" hidden="hidden" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="DoctorId" class="control-label"></label>

                    <select class="form-control" asp-for="DoctorId">
                        @foreach (var d in ViewData["doctors"] as IEnumerable<DoctorViewModel>)
                        {
                            if (Model.DoctorId == d.Id)
                            {
                                <option value="@(d.Id)" selected="selected">@(d.SurName)</option>
                            }
                            else
                            {
                                <option value="@(d.Id)">@(d.SurName)</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="DoctorTypeId" class="control-label"></label>

                    <select class="form-control" asp-for="DoctorTypeId">
                        @foreach (var d in ViewData["doctor_types"] as IEnumerable<DoctorTypeViewModel>)
                        {
                            if (Model.DoctorTypeId == d.Id)
                            {
                                <option value="@(d.Id)" selected="selected">@(d.Name)</option>
                            }
                            else
                            {
                                <option value="@(d.Id)">@(d.Name)</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="PacientId" class="control-label"></label>

                    <select class="form-control" asp-for="PacientId">
                        @foreach (var d in ViewData["pacients"] as IEnumerable<PacientViewModel>)
                        {
                            if (Model.PacientId == d.Id)
                            {
                                <option value="@(d.Id)" selected="selected">@(d.SurName)</option>
                            }
                            else
                            {
                                <option value="@(d.Id)">@(d.SurName)</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Complaints" class="control-label"></label>
                    <input asp-for="Complaints" class="form-control" />
                    <span asp-validation-for="Complaints" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Diagnosis" class="control-label"></label>
                    <input asp-for="Diagnosis" class="form-control" />
                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VisitDate" class="control-label"></label>
                    <input asp-for="VisitDate" class="form-control" />
                    <span asp-validation-for="VisitDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>
            <input type="submit" value="Сохранить" class="btn btn-primary" data-save="modal" />
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}